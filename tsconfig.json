{
  "compilerOptions": {
    "outDir": "dist",
    "module": "esnext",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noLib": false,
    "target": "es2017",
    "sourceMap": true,
    "lib": [
      "ESNext", "DOM"
    ],
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules",
    "script"
  ]
 }
